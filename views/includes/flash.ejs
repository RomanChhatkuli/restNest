 <% if(success.length){ %> 
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 text-center" role="alert">
        <strong></strong> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
 <% } %> 
 <% if(error.length){ %> 
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 text-center" role="alert">
        <strong></strong> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
 <% } %> 