<% layout('/layouts/boilerplate') -%>
  <div class="row justify-content-center show-ejs">
    <div class="col-12 col-md-6">
      <div class="card mt-4 mb-5 show-page-card">
        <h2>
          <%= listing.title %>
        </h2>
        <img src="<%= listing.image %>" class="card-img-top img-fluid d-block mx-auto" alt="home-image"
          style="height: 30rem" />
        <div class="card-body">
          <p class="card-text">
            <%= listing.description %> <br />
              Rs. <%= listing.price.toLocaleString("en-NP") %> <br />
                <%= listing.location %>, <%= listing.country %> <br />
          </p>
        </div>
        <div class="btns">
          <button class="btn btn-primary">
            <a href="/listings/<%= listing.id %>/edit">Edit</a>
          </button>


          <form action="/listings/<%= listing.id %>/delete?_method=DELETE" method="post" class="DeleteForm-listing">
            <div id="liveAlertPlaceholder-listing" class="alert-container">
              <div class="alert alert-danger alert-dismissible" role="alert">
                <div>Are you sure?</div>
                <div>Confirm Listing Delete!</div>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn-listing">
                  Confirm Delete
                </button>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            </div>
            <button type="button" class="btn btn-danger ms-3" id="liveAlertBtn-listing">
              Delete Listing
            </button>
          </form>



        </div>

        <div class="review mb-5 mt-5">
          <h3>Leave a Review.</h3>
          <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="mt-3 mb-3">
              <label for="rating" class="form-label">Rating:</label>
              <input type="range" min="1" max="5" class="form-range" name="review[rating]" />
            </div>

            <div class="mb-3">
              <label for="comment" class="form-label">Comment:</label>
              <textarea name="review[comment]" id="comment" rows="5" cols="10" class="form-control" required></textarea>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">
                Please write some comments for review.
              </div>
            </div>
            <button class="btn btn-outline-danger">Submit</button>
          </form>
        </div>

        <div class="row">
          <% if(listing.reviews.length){ %>
            <h4>All Reviews:</h4>
            <% } %>
              <% for (review of listing.reviews) { %>
                <div class="card col-5 ms-2 mb-4 review-card">
                  <div class="card-body">
                    <h5 class="card-title">Username</h5>
                    <p class="card-text">
                      <%= review.comment %>
                    </p>
                    <p class="card-text">
                      <%= review.rating %> star
                    </p>

                    <form action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE" method="post"
                      class="deleteForm">
                      <div id="liveAlertPlaceholder-reviewDelete">
                        <div class="alert alert-danger alert-dismissible" role="alert">
                          <div>Confirm Review Delete!</div>
                          <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                            Confirm Delete
                          </button>
                          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                      </div>
                      <button type="button" class="btn btn-primary" id="liveAlertBtn">
                        Delete Review
                      </button>
                    </form>


                  </div>
                </div>
                <% } %>
        </div>

      </div>
    </div>
  </div>