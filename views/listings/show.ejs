<% layout('/layouts/boilerplate') -%>
<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    <div class="card mt-4 mb-5 show-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="home-image"
        style="height: 25rem"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          <%= listing.description %> <br />
          Rs. <%= listing.price.toLocaleString("en-NP") %> <br />
          <%= listing.location %>, <%= listing.country %> <br />
        </p>
      </div>
      <div class="btns">
        <button class="btn btn-danger">
          <a href="/listings/<%= listing.id %>/edit">Edit</a>
        </button>
        <form
          action="/listings/<%= listing.id %>/delete?_method=DELETE"
          method="post"
        >
          <button class="btn btn-dark offset-1">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
