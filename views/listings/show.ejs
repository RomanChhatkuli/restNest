<% layout('/layouts/boilerplate') -%>
  <div class="row justify-content-center show-ejs">
    <div class="col-12 col-md-6">
      <div class="card mt-4 mb-5 show-page-card">
        <h2>
          <%= listing.title %>
        </h2>
        <img src="<%= listing.image.url %>" class="card-img-top img-fluid d-block mx-auto" alt="home-image"
          style="height: 30rem" />
        <div class="card-body">
          <p class="card-text">
            Owner: <%= listing.owner.username %>
          </p>
          <p class="card-text">
            <%= listing.description %> <br />
              Rs. <%= listing.price.toLocaleString("en-NP") %> <br />
                <%= listing.location %>, <%= listing.country %> <br />
          </p>
        </div>



        <% if(userInfo && userInfo._id.equals(listing.owner._id)){ %>
          <div class="btns">
            <button class="btn btn-primary">
              <a href="/listings/<%= listing.id %>/edit">Edit</a>
            </button>

            <form action="/listings/<%= listing.id %>?_method=DELETE" method="post" class="DeleteForm-listing">
              <div id="liveAlertPlaceholder-listing" class="alert-container">
                <div class="alert alert-danger alert-dismissible" role="alert">
                  <div>Are you sure?</div>
                  <div>Confirm Listing Delete!</div>
                  <button type="button" class="btn btn-danger" id="confirmDeleteBtn-listing">
                    Confirm Delete
                  </button>
                  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
              </div>
              <button type="button" class="btn btn-danger ms-3" id="liveAlertBtn-listing">
                Delete Listing
              </button>
            </form>
          </div>
          <% } %>


            <% if(userInfo) { %>
              <div class="review mb-5 mt-5">
                <h3>Leave a Review.</h3>
                <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">


                  <label for="rating">Rating:</label>
                  <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                      aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>


                  <div class="mb-3">
                    <label for="comment" class="form-label">Comment:</label>
                    <textarea name="review[comment]" id="comment" rows="5" cols="10" class="form-control"
                      required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">
                      Please write some comments for review.
                    </div>
                  </div>
                  <button class="btn btn-outline-danger">Submit</button>
                </form>
              </div>

              <% } %>

                <div class="row">
                  <% if(listing.reviews.length){ %>
                    <h4>All Reviews:</h4>
                    <% } %>
                      <% for (review of listing.reviews) { %>

                        
                        <div class="card col-5 ms-2 mb-4 review-card">
                          <div class="card-body">
                            <h5 class="card-title">
                              <img src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRTIFCbZa_AyogJ4j9BGwr9rso_Db1_lbe4z3KlkDlf22ByWJmN" alt="User Profile Picture" class="profile-pic">
                              <%= review.author.username %>
                            </h5>
                            <div class="rating-and-date">
                              <p class="starability-result card-text" data-rating=<%= review.rating %>>Rated:</p>
                              <p class="review-date"><%= review.createdAt.toDateString() %></p>
                            </div>
                            <p class="card-text"><%= review.comment %></p>

                            <% if(userInfo && userInfo._id.equals(review.author._id)){ %>
                              <form action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE"
                                method="post" class="deleteForm">
                                <button class="btn btn-outline-danger ">Delete</button>
                              </form>
                              <% } %>


                          </div>
                        </div>
                        <% } %>
                </div>

      </div>
    </div>
  </div>