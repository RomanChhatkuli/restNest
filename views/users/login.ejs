    <title>Sign In</title>
    <style>
        /* Add your CSS styles here */
        .signup-form {
            display: flex;
            flex-direction: column;
            gap: 10px;
            background-color: #ffffff;
            padding: 30px;
            width: 450px;
            border-radius: 20px;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        .signup-form label {
            color: #151717;
            font-weight: 600;
        }

        .signup-inputForm {
            border: 1.5px solid #ecedec;
            border-radius: 10px;
            height: 50px;
            display: flex;
            align-items: center;
            padding-left: 10px;
            transition: 0.2s ease-in-out;
        }

        .signup-input {
            margin-left: 10px;
            border-radius: 10px;
            border: none;
            width: 85%;
            height: 100%;
        }

        .signup-input:focus {
            outline: none;
        }

        .signup-inputForm:focus-within {
            border: 1.5px solid #2d79f3;
        }

        .signup-flex-row {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 10px;
            justify-content: space-between;
        }

        .signup-flex-row > div > label {
            font-size: 14px;
            color: black;
            font-weight: 400;
        }

        .signup-span {
            font-size: 14px;
            margin-left: 5px;
            color: #2d79f3;
            font-weight: 500;
            cursor: pointer;
        }

        .signup-button-submit {
            margin: 20px 0 10px 0;
            background-color: #151717;
            border: none;
            color: white;
            font-size: 15px;
            font-weight: 500;
            border-radius: 10px;
            height: 50px;
            width: 100%;
            cursor: pointer;
        }

        .signup-button-submit:hover {
            background-color: #252727;
        }

        .signup-p {
            text-align: center;
            color: black;
            font-size: 14px;
            margin: 5px 0;
        }

        .signup-btn {
            margin-top: 10px;
            width: 100%;
            height: 50px;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: 500;
            gap: 10px;
            border: 1px solid #ededef;
            background-color: white;
            cursor: pointer;
            transition: 0.2s ease-in-out;
        }

        .signup-btn:hover {
            border: 1px solid #2d79f3;
        }
    </style>
</head>

